{
  "root": true,
  "ignorePatterns": ["**/test", "**/__tests__"],
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": { "sourceType": "module" },
  "rules": {
    "indent": ["warn", 2, { "SwitchCase": 1 }],
    "no-unused-vars": ["off", { "vars": "local" }],
    "prefer-const": "warn",
    "quotes": ["warn", "single"],
    "space-infix-ops": "warn"
  },
  "globals": {
    "document": true,
    "chrome": true,
    "window": true
  }
}
